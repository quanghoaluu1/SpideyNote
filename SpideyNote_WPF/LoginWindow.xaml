<Window x:Class="SpideyNote.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SpideyNote"
        mc:Ignorable="d"
        Title="LoginWindow" Height="700" Width="500" WindowStartupLocation="CenterScreen" Background="#FF708090">
    <Grid>
        <Label Content="Username"  Margin="100, 25, 100, 0" Width="200" Height="30" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxUserName" Width="200" Height="30" Margin="100, 50, 100, 0" VerticalAlignment="Top" Text="hoa"/>
        <Label Content="Password"  Margin="100, 100, 100, 0" Width="200" Height="30" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordBoxPassword" Width="200" Height="30" Margin="100, 125, 100, 0" VerticalAlignment="Top" Password="123"/>
        <Button Name="ButtonLogin" Content="Login" Width="200" Height="30" Margin="100, 175, 100, 0" VerticalAlignment="Top" Click="ButtonLogin_OnClick"/>
        <Button Name="ButtonRegister" Content="Register" Width="200" Height="30" Margin="100, 220, 100, 0" VerticalAlignment="Top" Click="ButtonRegister_OnClick"/>
    </Grid>
</Window>
